{
    "compilerOptions": {
        "jsx": "react",
        "rootDir": "./src",
        "baseUrl": "./src",
        "paths": {
            "*": [
                "/",
                "components/*",
            ],
            "build/*": [
                "build/*"
            ],
            "data/*": [
                "data/*"
            ],
            "utils/*": [
                "utils/*"
            ]
        },
        "moduleResolution": "node",
        "noImplicitAny": true,
        "strict": true,
        "module": "esnext",
        "target": "es5",
        "lib": ["es6", "dom", "es2016", "es2017"],
        "skipLibCheck": true,
        "declaration": true /* Generates corresponding '.d.ts' file. */,
        "outDir": "dist" /* Redirect output structure to the directory. */,
        "typeRoots": [
            "node_modules/@types",
            "./typings.d.ts",
            "./src/types"
        ],
        "esModuleInterop": true,
        "sourceMap": true,
        "noEmitOnError": true,
        "resolveJsonModule": true
    },
    "include": [
        "./"
    ],
    "exclude": [
        "coverage",
        "dist",
        "node_modules",
        "temp"
    ]
}
